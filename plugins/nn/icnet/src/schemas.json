{
  "definitions": {
    "nonempty_string": {
      "type": "string",
      "minLength": 1
    },
    "positive_int": {
      "type": "integer",
      "minimum": 1
    },
    "nonnegative_int": {
      "type": "integer",
      "minimum": 0
    },
    "positive_float": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true
    },
    "nonnegative_float": {
      "type": "number",
      "minimum": 0
    },
    "positive_size": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "width",
        "height"
      ],
      "properties": {
        "width": {
          "$ref": "#/definitions/positive_int"
        },
        "height": {
          "$ref": "#/definitions/positive_int"
        }
      }
    },
    "gpu_devices_list": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/nonnegative_int"
      },
      "minItems": 1
    }
  },
  "training_config": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "dataset_tags",
      "batch_size",
      "data_workers",
      "input_size",
      "epochs",
      "val_every",
      "lr",
      "lr_decreasing",
      "weights_init_type",
      "gpu_devices"
   ],
    "properties": {
      "dataset_tags": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "train",
          "val"
        ],
        "properties": {
          "train": {
            "$ref": "#/definitions/nonempty_string"
          },
          "val": {
            "$ref": "#/definitions/nonempty_string"
          }
        }
      },
      "batch_size": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "train",
          "val"
        ],
        "properties": {
          "train": {
            "$ref": "#/definitions/positive_int"
          },
          "val": {
            "$ref": "#/definitions/positive_int"
          }
        }
      },
      "data_workers": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "train",
          "val"
        ],
        "properties": {
          "train": {
            "$ref": "#/definitions/nonnegative_int"
          },
          "val": {
            "$ref": "#/definitions/nonnegative_int"
          }
        }
      },
       "allow_corrupted_samples": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "train",
          "val"
        ],
        "properties": {
          "train": {
            "$ref": "#/definitions/nonnegative_int"
          },
          "val": {
            "$ref": "#/definitions/nonnegative_int"
          }
        }
      },
      "special_classes": {
        "type": "object",
        "additionalProperties": false,
        "required": [
        ],
        "properties": {
          "neutral": {
            "$ref": "#/definitions/nonempty_string"
          }
        }
      },
      "input_size": {
        "allOf": [
          {
            "$ref": "#/definitions/positive_size"
          }
        ]
      },
      "epochs": {
        "$ref": "#/definitions/positive_int"
      },
      "val_every": {
        "$ref": "#/definitions/positive_float"
      },
      "lr": {
        "$ref": "#/definitions/positive_float"
      },
      "lr_decreasing": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "patience",
          "lr_divisor"
        ],
        "properties": {
          "patience": {
            "$ref": "#/definitions/positive_int"
          },
          "lr_divisor": {
            "$ref": "#/definitions/positive_float"
          }
        }
      },
      "weights_init_type": {
        "type": "string",
        "enum": [
          "transfer_learning",
          "continue_training"
        ]
      },
      "gpu_devices": {
        "$ref": "#/definitions/gpu_devices_list"
      },
      "use_batchnorm": {
        "type": "boolean"
      }
    }
  },
  "inference_config": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "gpu_device"
    ],
    "properties": {
      "gpu_device": {
        "$ref": "#/definitions/nonnegative_int"
      },
      "min_score_threshold": {
        "allOf": [
          {
            "$ref": "#/definitions/positive_float"
          },
          {
            "maximum": 1
          }
        ]
      }
    }
  }
}
