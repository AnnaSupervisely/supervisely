FROM nvidia/cuda:9.0-cudnn7-devel-ubuntu16.04


RUN apt-get update && apt-get install -y --no-install-recommends \
         build-essential \
         cmake \
         git \
         curl \
         vim \
         ca-certificates \
         libjpeg-dev \
         libpng-dev &&\
     rm -rf /var/lib/apt/lists/*
ENV LD_LIBRARY_PATH=/usr/local/cuda/lib64:$LD_LIBRARY_PATH
RUN apt-get update && \
    apt-get install -y \
    libopencv-dev=2.4.9.1+dfsg-1.5ubuntu1 \
    qt-sdk=2ubuntu3 && \
    ldconfig


ENV CONDA_DIR /opt/conda
ENV PATH $CONDA_DIR/bin:$PATH

RUN mkdir -p $CONDA_DIR && \
    echo export PATH=$CONDA_DIR/bin:'$PATH' > /etc/profile.d/conda.sh && \
    apt-get update && \
    apt-get install -y wget git libhdf5-dev g++ graphviz && \
    wget --quiet https://repo.continuum.io/miniconda/Miniconda3-4.3.27.1-Linux-x86_64.sh && \
    /bin/bash /Miniconda3-4.3.27.1-Linux-x86_64.sh -f -b -p $CONDA_DIR && \
    rm Miniconda3-4.3.27.1-Linux-x86_64.sh

# Python
ARG python_version=3.6

RUN conda install -y python=${python_version} && \
    conda install Pillow scikit-learn notebook pandas matplotlib mkl nose pyyaml six h5py

ENV PYTHONPATH='/src/:$PYTHONPATH'

RUN conda install -y -c menpo opencv

RUN pip install shapely python-json-logger pybase64 pyclipper cython networkx scikit-image opencv-python

##############################################################################
# Jupyter & matplotlib
##############################################################################
RUN pip install jupyter \
        matplotlib
RUN pip uninstall -y prompt-toolkit
RUN pip install shapely python-json-logger scikit-image prompt-toolkit==1.0.15
ENV PYTHONPATH /workdir/src/darknet:/workdir/src/darknet/darknet:$PYTHONPATH
WORKDIR /workdir/src